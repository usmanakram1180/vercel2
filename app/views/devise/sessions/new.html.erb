<div class="theme-layout">
  <div class="container-fluid pdng0">
    <div class="row merged">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="land-featurearea">
          <div class="land-meta">
            <h1>Winku</h1>
            <p>
              Winku is free to use for as long as you want with two active projects.
            </p>
           <div class="friend-logo">
           <%= image_tag 'wink1.png', alt: 'Description of the image' %>
          </div>
          <%= link_to "Follow Us on", "#", title: "", class: "folow-me" %>
          </div>	
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="login-reg-bg">
          <div class="log-reg-area sign">
            <h2 class="log-title">Login</h2>
            <p>
              Donâ€™t use Winku Yet? <a href="#" title="">Take the tour</a> or <a href="#" title="">Join now</a>
            </p>
            
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <%= f.text_field :email, id: "input", required: true %>
                <%= f.label :username, "Username", class: "control-label" %>
                <i class="mtrl-select"></i>
              </div>

              <div class="form-group">
                <%= f.password_field :password, required: true %>
                <%= f.label :password, "Password", class: "control-label" %>
                <i class="mtrl-select"></i>
              </div>

              <div class="checkbox">
                <label>
                <%= f.check_box :remember_me, checked: true %>
                <i class="check-box"></i>Always Remember Me.
                </label>
              </div>
              
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: "already-have"  %>
              <div class="actions">
                <%= f.submit "Log in", class: 'btn btn-primary' %>
                <%= link_to "Registser", new_registration_path(resource_name), class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

