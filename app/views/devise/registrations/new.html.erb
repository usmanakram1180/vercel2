
<div class="theme-layout">
  <div class="container-fluid pdng0">
    <div class="row merged">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="land-featurearea">
          <div class="land-meta">
            <h1>Winku</h1>
            <p>
              Winku is free to use for as long as you want with two active projects.
            </p>
            <div class="friend-logo">
			<%= image_tag 'wink1.png', alt: 'Description of the image' %>
          </div>
          <%= link_to "Follow Us on", "#", title: "", class: "folow-me" %>
          
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="login-reg-bg">
          <div class="log-reg-area sign">
            <h2 class="log-title">Register</h2>
            <p>
              Donâ€™t use Winku Yet? <a href="#" title="">Take the tour</a> or <a href="#" title="">Join now</a>
            </p>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group">
                <%= f.text_field :full_name, required: true %>
                <%= f.label :full_name, "First & Last Name", class: "control-label" %>
                <i class="mtrl-select"></i>
              </div>

              <div class="form-group">
                <%= f.text_field :username, required: true %>
                <%= f.label :user_name, "User Name", class: "control-label" %>
                <i class="mtrl-select"></i>
              </div>
              <div class="form-group">
                <%= f.file_field :image, required: true, class: "form-control" %>
                <%# <%= f.label :image, "User Image", class: "control-label" %>
                <i class="mtrl-select"></i>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "password", required: true %>
                <%= f.label :password, "Password", class: "control-label" %>
                <i class="mtrl-select"></i>
              </div>

              <div class="form-radio">
                <div class="radio">
                  <label>
                    <%= f.radio_button :gender, 'Male', checked: true %>
                    <i class="check-box"></i>Male
                  </label>
                </div>
                <div class="radio">
                  <label>
                    <%= f.radio_button :gender, 'Female' %>
                    <i class="check-box"></i>Female
                  </label>
                </div>
              </div>

              <div class="form-group">
                <%= f.text_field :email, required: true %>
                <%= f.label :email, "Email", class: "control-label" %>
                <i class="mtrl-select"></i>
              </div>

              <div class="checkbox">
                <label>
                  <%= f.check_box :accept_terms, checked: true %>
                  <i class="check-box"></i>Accept Terms & Conditions?
                </label>
              </div>
			  <%= link_to "Already have an account", new_session_path(resource_name), class: "already-have" %>
              
              <div class="actions">
                <%= f.submit "Register", class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>